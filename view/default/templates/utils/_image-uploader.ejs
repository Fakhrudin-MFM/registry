<% let value = options.value; %>
<% if (value) { %>
<%
  var lnk = value.link;
  if (value.thumbnails && value.thumbnails.small) {
    lnk = value.thumbnails.small.link;
  }
%>
<p class="form-control-static file-frame">
  <a href="<%= value.link %>" target="_blank" class="file-frame-title">
    <img src="<%=lnk%>" alt="<%=value.name%>">
  </a>
  <span class="remove-file-btn glyphicon glyphicon-remove text-danger ml10" title="<%=__('Удалить файл')%>"></span>
  <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#share_<%= id %>">
    <span class="glyphicon glyphicon-cloud-download" title="sharing"></span>
  </button>
  <div class="modal fade" id="share_<%= id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">
            <%=__('Sharing')%>
          </h4>
        </div>
        <div class="modal-body" data-fileid="<%=value.id%>">
          <div class="form-group">
            <label>
              <%=__('Ссылка')%>
            </label>
            <div class="input-block">
              <input type="text" class="link form-control" id="share_<%=id%>_link" value="" readonly/>
              <span class="copy-clip glyphicon glyphicon-copy" data-copytarget="#share_<%= id %>_link" title="copy"></span>
            </div>
          </div>
          <div class="form-group">
            <label>
              <%=__('Внешняя ссылка')%>
            </label>
            <br/>
            <div class="share-file-menu-btn-wrap">
              <input class="share-file-menu-btn" id="share_<%= id %>_sharebtn" type="checkbox" />
              <label for="share_<%= id %>_sharebtn">
                <%=__('Поделиться ссылкой')%>
              </label>
            </div>
            <div class="share-block">
              <div class="input-block">
                <input type="text" class="share-link form-control" id="share_<%=id%>_sharelink" value="" readonly/>
                <span class="copy-clip glyphicon glyphicon-copy" data-copytarget="#share_<%= id %>_sharelink" title="copy"></span>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">
            <%=__('Close')%>
          </button>
        </div>
      </div>
    </div>
  </div>
</p>
<% } %>
<% if (!options.readonly) { %>
  <div class="uploader" data-url="<%= uploadUrl %>" data-attr="<%= name %>" <% if (value) { %>style="display:none;"<% } %>>
    <input type="hidden" id="<%= id %>"
           value="<%= value ? value.id : "" %>"
           name="<%= name %>"
           class="attr-value">
    <div class="uploader-input">
      <input type="file" class="uploader-input-file">
      <div class="uploader-dropzone">
        <div class="uploader-dropzone-h1"><%=__('Перетащите изображение сюда')%></div>
        <div class="uploader-dropzone-h2"><%=__('или выберите из папки')%></div>
      </div>
    </div>
    <div class="uploader-overflow"><%=__('Слишком много файлов')%></div>
    <div class="uploader-list clearfix">
      <div class="uploader-item pending sample">
        <div class="uploader-thumb"><div></div></div>
        <div class="uploader-signs">
          <div class="uploader-sign-pending fa fa-refresh fa-spin"></div>
          <div class="uploader-sign-processing fa fa-refresh fa-spin"></div>
          <div class="uploader-sign-done glyphicon glyphicon-ok"></div>
          <div class="uploader-sign-failed glyphicon glyphicon-ban-circle"></div>
        </div>
        <div class="uploader-remove" title="<%=__('Удалить')%>"><span class="glyphicon glyphicon-remove"></span></div>
        <div class="uploader-info">
          <div class="uploader-filename"><%=__('Файл')%></div>
          <div class="progress progress-xxs"><div class="progress-bar"></div></div>
          <div class="uploader-message"><%=__('Ожидает проверки...')%></div>
        </div>
      </div>
    </div>
  </div>
<% } %>