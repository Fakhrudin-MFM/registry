<!-- _checkbox -->
<div class="form-group <%=cssFromTags(field)%>" style="<%=styleFromTags(field)%>"
     data-type="checkbox"
     data-prop="<%= JSON.stringify(field) %>">
  <div class="col-sm-offset-2 col-md-10 col-sm-9">
    <div class="checkbox">
      <label>
        <% var checkbox_value, pVal = prop.getValue();
          if (pVal === null) {
            checkbox_value = prop.meta.nullable ? null : false;
          } else if (typeof pVal === 'string') {
            checkbox_value = pVal === 'true';
          } else {
            checkbox_value = pVal;
          } %>
        <input type="hidden" name="<%= prop.getName() %>" value="<%= checkbox_value %>" class="attr-value">
        <input type="checkbox" id="<%= id %>" class="form-control"
          nullable=<%= prop.meta.nullable %>
        <%= (checkbox_value === null) ? 'indeterminate=true' : ((checkbox_value) ? 'checked' : '')%>
        />
        <%= field.caption %><% include help-sign %>
      </label>
    </div>
    <p class="error-block"></p>
  </div>
</div>
