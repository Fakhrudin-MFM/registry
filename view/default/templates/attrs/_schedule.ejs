<!-- schedule -->
<%
  var value = prop.getValue();
  value = value ? JSON.stringify(value) : '';
%>
<div class="form-group <%= field.required?"required":"" %> <%=cssFromTags(field)%>"
     style="<%=styleFromTags(field)%>"
     data-type="schedule"
     data-prop="<%= JSON.stringify(field) %>">
    <label for="<%= id %>" class="col-md-2 col-sm-3 control-label"><%= field.caption %><% include help-sign %></label>
    <div class="col-md-10 col-sm-9">
        <div class="worktime">
            <input type="hidden" id="<%= id %>" name="<%= prop.getName() %>"
                   class="attr-value" value="<%= value %>">
            <div class="worktime-loader form-control-static">
              <span class="fa fa-refresh fa-spin"></span>
            </div>
            <div class="worktime-list">
                <div class="worktime-item master clearfix">
                    <div class="worktime-week">
                        <button class="btn-day btn btn-default" data-id="1" type="button">
                            <%=__('Пн')%>
                        </button>
                        <button class="btn-day btn btn-default" data-id="2" type="button">
                            <%=__('Вт')%>
                        </button>
                        <button class="btn-day btn btn-default" data-id="3" type="button">
                            <%=__('Ср')%>
                        </button>
                        <button class="btn-day btn btn-default" data-id="4" type="button">
                            <%=__('Чт')%>
                        </button>
                        <button class="btn-day btn btn-default" data-id="5" type="button">
                            <%=__('Пт')%>
                        </button>
                        <button class="btn-day btn-weekend btn btn-default" data-id="6" type="button">
                            <%=__('Сб')%>
                        </button>
                        <button class="btn-day btn-weekend btn btn-default" data-id="7" type="button">
                            <%=__('Вс')%>
                        </button>
                        <div class="worktime-filters">
                            <span class="worktime-filter fivedays">
                                <%=__('Пятидневка')%>
                            </span>
                            <span class="worktime-filter daily">
                                <%=__('Ежедневно')%>
                            </span>
                        </div>
                    </div>
                    <div class="worktime-time">
                        <span class="glyphicon glyphicon-time" title="<%=__('Рабочее время')%>"></span>
                        <select class="form-control">
                            <option value="00">00</option>
